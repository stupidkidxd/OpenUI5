<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form editable="false">
			<f:title>
				<core:Title text="{i18n>ttlChangebleInfo}" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{i18n>ttlText}">
					<f:formElements>
						<f:FormElement label="{i18n>ttlMaterialText}">
							<f:fields>
								<Text text="{MaterialText}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>ttlRating}">
							<f:fields>
								<Text text="{Rating}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>ttlMaterialDescription}">
							<f:fields>
								<Text text="{MaterialDescription}"/>
							</f:fields>
						</f:FormElement>
						
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer title="{i18n>ttlGroups}">
					<f:formElements>
						<f:FormElement label="{i18n>lGroupText}">
							<f:fields>
								<Text text="{GroupText}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>lGroupText}">
							<f:fields>
								<Text text="{SubGroupText}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<f:Form editable="false">
			<f:title>
				<core:Title text="More" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{i18n>ttlCreationInfo}">
					<f:formElements>
						<f:FormElement label="{i18n>lTableCreated}">
							<f:fields>
								<Text text="{path: 'Created', type: 'sap.ui.model.type.DateTime', formatOptions: {style:'short'}}" visible="{= !${objectView>/editMode}}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>ttlCreatedBy}">
							<f:fields>
                                <Text text="{path: 'CreatedByFullName', formatter: '.formatter.formatName'}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>ttlTableModified}">
							<f:fields>
								<Text text="{path: 'Modified', type: 'sap.ui.model.type.DateTime', formatOptions: {style:'medium'}}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>ttlModifiedByFullName}">
							<f:fields>
                                <Text text="{ModifiedByFullName}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>