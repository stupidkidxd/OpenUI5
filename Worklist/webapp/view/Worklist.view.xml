<mvc:View
	controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Materials',
					sorter: {
						path: 'MaterialText',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growingThreshold="15"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
						<Button
							press="onPressCreateMaterial"
							icon="{i18n>iCreate}"
							text="{i18n>btnCreate}"
							type="Emphasized"/>
						<Button 
							press="onPressRefresh"
							icon="sap-icon://refresh"
							tooltip="{i18n>Refresh}"
						/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="{i18n>ttlMaterialID}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlMaterialText}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlMaterialDescription}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlCreatedByFullName}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlCreated}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlModifiedByFullName}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlModified}"/>
					</Column>
					<Column width="5%"></Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPressShowMaterial">
						<cells>
							<ObjectIdentifier title="{MaterialID}"/>
							<ObjectIdentifier title="{MaterialText}"/>
							<ObjectIdentifier title="{MaterialDescription}"/>
							<ObjectIdentifier title="{CreatedByFullName}"/>
							<ObjectIdentifier title="{
								path: 'Created',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: {
									style: 'short'
								}
							}"/>
							<ObjectIdentifier title="{ModifiedByFullName}"/>
							<ObjectIdentifier title="{
								path: 'Modified', 
								type: 'sap.ui.model.type.DateTime', 
								formatOptions: {
									style: 'medium'
								}
							}"/>
							<Button 
								press="onPressDeleteMaterial"
								icon="{i18n>iDelete}"
								tooltip="{i18n>btnDelete}"
								type="Transparent"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>